doctype html
html(lang="en" class="h-full bg-gray-50")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    title #{title}
    script(src="https://cdn.tailwindcss.com")
  body(class="h-full")
    div(class="min-h-full")
      nav(class="bg-white shadow-sm")
        div(class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8")
          div(class="flex h-16 justify-between")
            div(class="flex")
              div(class="flex flex-shrink-0 items-center")
                h2(class="text-2xl font-bold tracking-tight text-gray-900") Projects API
              div(class="ml-6 flex items-center space-x-4")
                a(href="/" class="text-gray-900 hover:text-gray-700 px-3 py-2 text-sm font-medium") Home
                a(href="/projects" class="text-gray-900 hover:text-gray-700 px-3 py-2 text-sm font-medium") Projects
      
      main
        div(class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8")
          div(class="px-4 py-4 sm:px-0")
            h1(class="text-2xl font-semibold text-gray-900 mb-6") #{title}
            block content
