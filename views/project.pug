  p #{project.description}
  p Organizer: #{project.organizer}
  h3 Members
  if project.members.length === 0
    p No members
  else
    ul
      each m in project.members
        li #{m.name} â€” #{m.role}
  if project.specFile
    p
      | Spec: 
      a(href=`/uploads/${project.specFile}`) #{project.specFile}
